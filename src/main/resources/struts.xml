<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="false" />
    <constant name="struts.action.extension" value="html" />    
    <constant name="struts.action.excludePattern" value="/dwr/.*?"/>
    <include file="struts-default.xml" />
    <package name="default" extends="struts-default" >
                
        <action name="accountmigrationsystem" 
                class="com.mobitel.action.GetDefaultInformationAction" method="display">
            <result name="none">/new_system_account_creation.jsp</result>
        </action>   
        
        <action name="old_user_accounts_migration" 
                class="com.mobitel.action.GetDefaultInformationAction" method="register_user">
            <result name="SUCCESS">/user_creation_success.jsp</result>
            <result name="FAILED" type="redirect">${failed_NextPage}</result>
        </action>             
     
        <action name="accountmigrationsystemerror" 
                class="com.mobitel.action.RegistrationFailedAction" method="display">
            <result name="none">/new_system_account_creation_error.jsp</result>
        </action>  
     
        
       
    </package>
   
</struts>
